{
  "name": "ml-full (pytorch25.04-py3)",
  // Dockerfile を使う設定に変更
  "build": {
    "dockerfile": "Dockerfile"
  },
  // mount はそのまま
  "mounts": [
    "source=${localEnv:HOME}/data,target=/data,type=bind"
  ],
   "runArgs": [
    "-v",
    "${localEnv:HOME}/.gitconfig:/etc/gitconfig:ro"
  ],  // 既存プロパティ …,
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-python.black-formatter",
          "ms-python.isort",
          "ms-python.flake8"
        ]
      }
    },
  
  
  "remoteUser": "ubuntu"
}
