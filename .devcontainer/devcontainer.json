{
  "name": "ml-full (pytorch25.04-py3)",
  // Dockerfile を使う設定に変更
  "build": {
    "dockerfile": "Dockerfile"
  },
  // mount はそのまま
  "mounts": [
    "source=${localEnv:HOME}/data,target=/data,type=bind"
  ],
   "runArgs": [
    "-v",
    "${localEnv:HOME}/.gitconfig:/etc/gitconfig:ro"
  ],  // 既存プロパティ …,
  "customizations": {
      "vscode": {
          //"ms-python.black-formatter", "ms-python.isort",
          // 下記のようにstting.jsonを指定することで、balckやisortが保存時に自動で実行されるようになる
          //     "[python]": {
          //     "editor.defaultFormatter": "ms-python.black-formatter",
          //     "editor.formatOnSave": true,
          //     "editor.codeActionsOnSave": {
          //         "source.organizeImports": "explicit"
          //     }
          // },
          // "isort.args": [
          //     "--profile",
          //     "black"
          // ],
        
        "extensions": [
          "ms-python.python",
          "ms-python.black-formatter",
          "ms-python.isort",
          "ms-python.flake8",
          "GitHub.copilot",
          "GitHub.copilot-chat",
          "ms-toolsai.jupyter"
        ]
      }
    },
  
  
  "remoteUser": "ubuntu"
}
